{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "declaration": true,
    "outDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleDetection": "auto",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
}