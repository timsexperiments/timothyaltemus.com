---
import { ArrowRight, ChevronRightIcon } from 'lucide-react';
import HeroImage from '../icons/timsexperiments_hero_section.svg';
---

<div class="relative isolate overflow-hidden bg-white">
  <svg
    class="absolute inset-0 -z-10 h-full w-full stroke-grey-200 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
    aria-hidden="true">
    <defs>
      <pattern
        id="0787a7c5-978c-4f66-83c7-11c213f99cb7"
        width={200}
        height={200}
        x="50%"
        y={-1}
        patternUnits="userSpaceOnUse">
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
    </defs>
    <rect
      width="100%"
      height="100%"
      stroke-width={0}
      fill="url(#0787a7c5-978c-4f66-83c7-11c213f99cb7)"></rect>
  </svg>
  <div
    class="mx-auto max-w-7xl px-6 pb-24 pt-10 sm:pb-32 lg:flex lg:px-8 lg:py-40">
    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl lg:flex-shrink-0 lg:pt-8">
      <div class="mt-24 sm:mt-32 lg:mt-16">
        <a href="#" class="inline-flex space-x-6">
          <span
            class="rounded-full bg-teal-vivid-600/10 px-3 py-1 text-sm font-semibold leading-6 text-teal-vivid-600 ring-1 ring-inset ring-teal-vivid-600/10">
            What's new
          </span>
          <span
            class="inline-flex items-center space-x-2 text-sm font-medium leading-6 text-grey-600">
            <span>Just shipped v1.0</span>
            <ChevronRightIcon
              className="h-5 w-5 text-grey-400"
              aria-hidden="true"
            />
          </span>
        </a>
      </div>
      <h1
        class="mt-10 text-4xl font-bold tracking-tight text-grey-900 sm:text-6xl">
        Discover, Learn, Innovate
      </h1>
      <p class="mt-6 text-lg leading-8 text-grey-600">
        A playground for software enthusiasts. Dive deep into a world where code
        meets creativity, where every experiment is a journey of discovery.
      </p>
      <div class="mt-10 flex items-center gap-x-6">
        <a
          href="#"
          class="rounded-md bg-teal-vivid-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teal-vivid-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-vivid-600">
          Explore The Lab
        </a>
        <a
          href="#"
          class="text-sm font-semibold flex items-end gap-1 leading-6 text-grey-900">
          Learn more <span class="inline-block mb-1" aria-hidden="true">
            <ArrowRight className="w-3 h-3" strokeWidth={2.5} />
          </span>
        </a>
      </div>
    </div>
    <div
      class="hidden mx-auto mt-16 lg:flex max-w-2xl sm:mt-24 lg:ml-10 lg:mr-0 lg:mt-0 lg:max-w-none lg:flex-none xl:ml-32">
      <div class="max-w-3xl flex-none sm:max-w-5xl lg:max-w-none">
        <div
          class="-m-2 rounded-xl bg-grey-900/5 p-2 ring-1 ring-inset ring-grey-900/10 lg:-m-4 lg:rounded-2xl lg:p-4">
          <div
            class="h-[36rem] w-[76rem] rounded-md shadow-2xl ring-1 ring-grey-900/10">
            <img class="h-full" src={HeroImage.src} />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
